@using EntertechFP.UI.Models.Entitities
@using EntertechFP.UI.Models.ViewModels
@{
    Layout = "_UserLayout";
}
@model UserEventsViewModel

<section class="content">
    <div class="content-header">
        <h1>Etkinlikler</h1>
    </div>
    <table class="table table-striped">
        <thead>
            <tr>
                <th style="width: 2%">#</th>
                <th style="width: 33%">Etkinlik Adı</th>
                <th style="width: 33%">Etkinliği Düzenleyen</th>
                <th style="width: 10%">Kategori</th>
                <th style="width: 10%">Şehir</th>
                <th style="width: 12%"></th>

            </tr>
        </thead>
        <tbody>
            @for(int i = 0;i<Model.Events.Count;i++){

                <tr>      
                    <td>@(i+1)</td>
                    <td>@Model.Events[i].EventName</td>
                    @if(Model.Events[i].User is not null){
                        <td>@($"{Model.Events[i].User.FirstName} {Model.Events[i].User.LastName}")</td>
                    }
                    else{
                        <td></td>
                    }
                    @if (Model.Events[i].Category is not null)
                    {
                        <td>@Model.Events[i].Category.CategoryName</td>
                    }
                    else
                    {
                        <td></td>
                    }
                    @if (Model.Events[i].City is not null)
                    {
                        <td>@Model.Events[i].City.CityName</td>
                    }
                    else
                    {
                        <td></td>
                    }
                    @if (Model.NextAttends.Contains(Model.Events[i].EventId))
                    {
                        <td class="text-center">
                            <a href="@Url.Action("LeaveEvent","User",new {eventId=Model.Events[i].EventId})" class="btn btn-danger">Ayrıl</a>
                        </td>
                    }
                    else{
                        <td class="text-center">
                            <a href="@Url.Action("AttendEvent","User",new {eventId=Model.Events[i].EventId})" class="btn btn-primary">Katıl</a>
                        </td>
                    }
                </tr>
            }
        </tbody>
    </table>
</section>