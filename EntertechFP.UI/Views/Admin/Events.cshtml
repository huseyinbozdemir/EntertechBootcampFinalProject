@using EntertechFP.UI.Models.Entitities
@model List<EventDto>

<section class="content">
    <div class="content-header">
        <h1>Tüm Etkinlikler</h1>
    </div>
    <table class="table table-striped">
        <thead>
            <tr>
                <th style="width: 2%">#</th>
                <th style="width: 33%">Etkinlik Adı</th>
                <th style="width: 38%">Kullanıcı</th>
                <th style="width: 15%" class="text-center">Durum</th>
                <th style="width: 12%"></th>

            </tr>
        </thead>
        <tbody>
            @for (int i = 0; i < Model.Count; i++)
            {
                <tr>
                    <td>@(i + 1)</td>
                    <td>@Model[i].EventName</td>
                    @if (Model[i].User is null)
                    {
                        <td></td>
                    }
                    else
                    {
                        <td>@(Model[i].User.FirstName +' '+ Model[i].User.LastName)</td>
                    }
                    <td class="text-center">
                        <h5>
                            @switch (Model[i].IsApproved)
                            {
                                case true:
                                    <span class="badge bg-success">Onaylandı</span>
                                    break;
                                case false:
                                    <span class="badge bg-danger">Reddedildi</span>
                                    break;
                                case null:
                                    <span class="badge bg-primary">Bekliyor</span>
                                    break;
                            }
                        </h5>
                    </td>
                    <td class="text-right">
                        <a class="btn btn-outline-primary btn-sm" href="@Url.Action("EventDetails","Admin",new {eventid=Model[i].EventId})">
                            <i class="fas fa-search">
                            </i>
                            İncele
                        </a>
                        <a class="btn btn-outline-danger btn-sm" onclick="Remove(@Model[i].EventId)">
                            <i class="fas fa-trash">
                            </i>
                            Sil
                        </a>
    
                    </td>
                </tr>
            }
        </tbody>
    </table>
</section>

@section Scripts{
    <script type="text/javascript">
        function Remove(id) {
            Swal.fire({
                title: 'Emin misiniz?',
                text: "Değişiklikler geri alınmayacaktır!",
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#3085d6',
                cancelButtonColor: '#d33',
                confirmButtonText: 'Evet',
                cancelButtonText:   'Hayır',
            }).then((result) => {
                if (result.isConfirmed) {
                    window.location.href = "/Admin/RemoveEvent?EventId=" + id;
                }
            })
        }
        $(document).ready(function(){
            var msg = "@ViewBag.Alert";
            if(msg.toLowerCase() == "false"){
                Swal.fire({
                icon: 'error',
                title: 'Hata...',
                text: 'Etkinlik silinemedi!',
                });
            }
            else if(msg.toLowerCase()=="true"){
                Swal.fire({
                icon: 'success',
                title: 'Bilgi...',
                text: 'Etkinlik başarıyla silindi!',
                });
            }
        });
    </script>
}
