@using EntertechFP.UI.Models.Entitities
@model List<EventDto>
<section class="content">
    <div class="content-header">
        <h1>Onay Bekleyen Etkinlikler</h1>
    </div>
<table class="table table-sm">
    <thead>
        <tr>
            <th style="width: 2%">#</th>
            <th style="width: 35%">Etkinlik Adı</th>
            <th style="width: 35%">Kullanıcı</th>
            <th style="width: 5%" class="text-center">Durum</th>
            <th style="width: 20%"></th>

        </tr>
    </thead>
    <tbody>
        @for (int i = 0; i < Model.Count; i++)
        {
            <tr>
                <td>@(i+1)</td>
                <td>@Model[i].EventName</td>
                @if (Model[i].User is null)
                {
                    <td></td>
                }
                else{
                    <td>@Model[i].User.FirstName</td>
                }
                <td class="text-center">
                    <h5>
                @switch (Model[i].IsApproved)
                {
                    case true:
                    <span class="badge bg-success">Onaylandı</span>
                        break;
                    case false:
                    <span class="badge bg-danger">Reddedildi</span>
                        break;
                    case null:
                    <span class="badge bg-primary">Bekliyor</span>
                        break;
                }
                </h5>
                </td>
                <td class="text-right">
                      <button type="button" class="btn btn-primary btn-sm"><i class="fa fa-search"></i> İncele</button>
                      <button type="button" class="btn btn-success btn-sm"><i class="fa fa-check"></i> Onayla</button>
                      <button type="button" class="btn btn-danger btn-sm"><i class="fa fa-trash"></i> Reddet</button>
                </td>
            </tr>
        }
    </tbody>
</table>
</section>